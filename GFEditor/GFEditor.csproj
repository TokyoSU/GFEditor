<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<SatelliteResourceLanguages>none</SatelliteResourceLanguages>
	<ApplicationIcon>Icon1.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Icon1.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BCnEncoder.Net" Version="2.2.1" />
    <PackageReference Include="BCnEncoder.Net.ImageSharp" Version="1.1.2" />
    <PackageReference Include="Hexa.NET.GLFW" Version="1.0.4" />
    <PackageReference Include="Hexa.NET.ImGui" Version="2.2.8.5" />
    <PackageReference Include="Hexa.NET.ImGui.Backends" Version="1.0.17.4" />
    <PackageReference Include="Hexa.NET.ImGui.Backends.GLFW" Version="1.0.17.4" />
    <PackageReference Include="Hexa.NET.ImGui.Widgets" Version="1.2.14" />
    <PackageReference Include="Hexa.NET.ImGui.Widgets.Extras" Version="1.0.6" />
    <PackageReference Include="Hexa.NET.ImGuizmo" Version="2.2.8.4" />
    <PackageReference Include="Hexa.NET.ImNodes" Version="2.2.8.4" />
    <PackageReference Include="Hexa.NET.ImPlot" Version="2.2.8.4" />
    <PackageReference Include="Hexa.NET.OpenGL4" Version="1.1.0" />
    <PackageReference Include="Hexa.NET.StbImage" Version="1.0.2" />
    <PackageReference Include="Hexa.NET.Utilities" Version="2.2.3" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="NLog" Version="6.0.4" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.11" />
    <PackageReference Include="WinSCP" Version="6.5.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
